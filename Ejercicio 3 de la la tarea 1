import Data.Map.Strict (Map)
import qualified Data.Map.Strict as Map

contarLongitudesPalabras :: String -> Map String Int
contarLongitudesPalabras texto = Map.fromListWith (+) [(palabra, length palabra) | palabra <- palabras]
    where palabras = words texto 
main :: IO ()
main = do
    let texto = "Esto es call of duty Modern Warfare"
        diccionario = contarLongitudesPalabras texto
    print diccionario
